<h1>New order</h1>

<% form_for(@order) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :customer_name %><br />
    <%= f.text_field :customer_name %>
  </p>
	<p>
		<% Training.all.each do |t| %>
			<input type="checkbox" name="products[<%=t.id%>]" value="true"><%=t.name%></option>
		<% end %>
	</p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', orders_path %>